<div class="card-description">
  <div id="workout-description">
    <h2>{{selectedWorkout.title}}</h2>
    <h3><strong>Workout description</strong></h3>
    <p>{{selectedWorkout.description}}</p>
    <p>Intensity Level: {{selectedWorkout.intensity}}</p>
    <p>Completion Time: {{selectedWorkout.time_frame}}</p>
    <p>Comments {{selectedWorkout.content}}</p>
    <button class="btn-add-to-list">Add to your list</button>
  </div>
  <div class="comment-section">
    <a href="#">Comments(number of comments)</a>
    <div class="form-floating">
      <textarea
          class="form-control"
          placeholder="Leave a comment here"
          id="floatingTextarea2"
      ></textarea>
      <label for="floatingTextarea2">Add your comment here</label>
    </div>
    <button class="btn btn-primary" type="button">Send</button>
  </div>
</div>
